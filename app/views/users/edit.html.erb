<%= render "shared/account-settings"%>
    <div class="border-bottom">
        <h3>プロフィール</h3>
    </div>

    <%= form_with model:@user do |f| %>
        <table>
            <tr>
                <th><%= f.label :icon, "アイコン画像" %></th>
                <td><%= f.file_field :icon %></td>
            </tr>

            <tr>
                <th><%= f.label :user_name, "名前" %></th>
                <td><%= f.text_field :user_name %></td>
            </tr>

            <tr>
                <th><%= f.label :introduce, "自己紹介" %></th>
                <td><%= f.text_area :introduce %></td>
            </tr>
        </table>

            <%= f.submit "保存" %>
            <%= link_to "キャンセル", :back %>
    <% end %>





    

