<h3>予約済み一覧</h3>

<table>
  <thead>
    <tr>
      <th>画像</th>
      <th>施設名</th>
      <th>紹介文</th>
      <th>合計金額</th>
      <th>チェックイン</th>
      <th>チェックアウト</th>
      <th>予約確定日時</th>
    </tr>
  </thead>

  <tbody>

      <% @reservations.each do |reservation| %>
        <tr>
          <td><%= reservation.room.image %></td>
          <td><%= reservation.facility_name %></td>
          <td><%= reservation.detail %></td>
          <td>¥<%= reservation.total_price %></td>
          <td><%= reservation.start_date.strftime("%Y/%m/%d") %></td>
          <td><%= reservation.end_date.strftime("%Y/%m/%d") %></td>
          <td><%= reservation.created_at.strftime("%Y/%m/%d") %></td>
        </tr>
      <% end %>
  </tbody>
</table>